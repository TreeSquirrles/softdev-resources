<JoystickScreen>
    ImageButton:
        id: hatsune_btn
        size_hint: (root.picture_size, root.picture_size)
        #pos_hint: {'x': 0.5-root.picture_size/2, 'y': 0.5-root.picture_size/2}
        pos:( root.width / 2 - root.width*root.picture_size/2, root.height / 2 - root.height*root.picture_size/2)
        on_press: root.switch_screen_main()

    Label:
        id: joy_x
        color: 0, 0, 0, 1
        pos_hint: {'x': 0, 'top': 1}
        text_size: self.size
        font_size: 24
        halign: "left"
        valign: "top"
        text: "x: 0"

    Label:
        id: joy_y
        color: 0, 0, 0, 1
        pos_hint: {'right': 1, 'top': 1}
        text_size: self.size
        font_size: 24
        halign: "right"
        valign: "top"
        text: "y: 0"


    Label:
        id: pressed_btns_btn
        font_size: 24
        color: 'black'
        valign: "top"
        halign: "center"
        text_size: self.size
        size_hint: (0.1, None)
        pos_hint: {'center_x': 0.5, 'top': 1}
        text: "No Buttons Pressed"

